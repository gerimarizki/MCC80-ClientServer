@{
    Layout = "LayoutEmployee";
}

<div class="text-center">
    <h1 class="align-content-center" id="judul">List Employee</h1>
</div>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddEmployee">Add Employee</button>
<div class="add-employee">
    <div class="modal" id="modalAddEmployee" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Employee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                    <div class="mb-3">
                        <label for="firstName" class="form-label"> First Name</label>
                        <input type="text" class="form control" id="firstName" placeholder="First Name">
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label"> Last Name</label>
                        <input type="text" class="form control" id="lastName" placeholder="Last Name">
                    </div>
                    <div class="mb-3">
                        <label for="birthDate" class="form-label"> birth Date</label>
                        <input type="datetime-local" class="form control" id="birthDate" placeholder="birth Date">
                    </div>
                        <div class="mb-3">
                            <label for="gender" class="col-form-label">Gender:</label>
                            <select class="form-control" id="gender" required>
                                <option value="1">Male</option>
                                <option value="0">Female</option>
                            </select>
                        </div>
                    <div class="mb-3">
                        <label for="hiringDate" class="form-label"> Hiring Date</label>
                        <input type="datetime-local" class="form control" id="hiringDate" placeholder="Hiring Date">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label"> Email</label>
                        <input type="email" class="form control" id="email" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label"> Phone Number</label>
                        <input type="tel" class="form control" id="phoneNumber" placeholder="Phone Number">
                    </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="addEmployee()" class="btn btn-primary d-inline-block" data-bs-dismiss="modal">Add Employee</button>
                    <button type="button" class="btn btn-secondary d-inline-block" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<table class="table table-striped table-hover table-bordered" id="employeeTable">
    <thead class="table-light">
        <tr>
            <th>No</th>
            <th>NIK</th>
            <th>Nama</th>
            <th>Birth Date</th>
            <th>Gender</th>
            <th>Hiring Date</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodyEmployee">
    </tbody>
</table>
